<div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Make A new Post</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <%= form_for(@post) do |h| %>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <%= h.text_field :title, class: "form-control" ,placeholder: "give it a title!!!" %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <%= h.text_area :description, class: "form-control" ,placeholder: "Compose new Hosting..." %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <%= h.file_field :image %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <%= h.submit "post", class: "btn btn-success btn-lg" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
</div>

